{% extends 'base.html.twig' %}

{% block title %}Rooms List{% endblock %}

{% block body %}
<style>
    .room-list {
        background-color: #0056b3;
        margin-left: 75px;
        margin-right: 75px;
        padding: 5px;
        border-radius: 10px 10px;
        transition: transform 0.5s ease-in-out;
    }

    .room-list:hover {
        background: #007bff;
        color: #5f1135;
        transform: scale(1.01);
        box-shadow: 0 6px 12px rgba(0,0,0,0.1);
        cursor: pointer;
    }

    h1 {
        text-align: center;
        font-family: 'Times New Roman', Times, serif;
        font-size: 4rem;
        margin-top: 25px;
        margin-bottom: 25px;
        color: #222;
        letter-spacing: 0px;
        transition: letter-spacing 0.3s ease;
    }

    h1:hover {
        letter-spacing: 6px;
    }

    body {
        background: #f4f6f8;
        font-family: 'Lato', 'Segoe UI', sans-serif;
        color: #333;
    }

    table {
        width: 90%;
        margin: 10px auto;
        border-collapse: collapse;
        background: white;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border-radius: 12px;
        overflow: hidden;
    }

    th, td {
        padding: 14px;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #007bff;
        color: white;
        font-weight: 900;
    }
    tr {
        transition: all 0.3s ease-in-out;
    }

    tr:hover {
        background-color: #c2d0f5;
    }

    .btn {
        padding: 8px 12px;
        border-radius: 6px;
        text-decoration: none;
        color: rgb(7, 5, 5);
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn-edit {
        background-color: #0cb834;
        cursor: pointer;
    }

    .btn-edit:hover {
        color: #218838;
        background-color: #ffffff;
        
    }

    .btn-delete {
        background-color: #dc3545;
        border: none;
        cursor: pointer;
    }

    .btn-delete:hover {
        color: #d12537;
        background-color: white;
    }

    .back-link {
        display: inline-block;
        margin-top: 15px;
        text-decoration: none;
        color: #007bff;
        transition: color 0.2s;
    }

    .back-link:hover {
        color: #0056b3;
        text-decoration: underline;
    }

    .alert-success {
        text-align: center;
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
        border-radius: 6px;
        padding: 10px 15px;
        width: 90%;
        margin: 15px auto;
    }

</style>

<div class="room-list">
    <h1 style="text-align:center;">Rooms List</h1>

</div>

    {% for message in app.flashes('success') %}
            <div class="alert-success">{{ message }}</div>
    {% endfor %}

<table>
    <thead>
        <tr>
            <th>Last Updated</th>
            <th>ID</th>
            <th>Room Number</th>
            <th>Type</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.updatedAt ? room.updatedAt|date('M d, Y H:i') : "now"|date('M d, Y H:i') }}</td>
                <td>{{ room.id }}</td>
                <td>{{ room.roomNumber }}</td>
                <td>{{ room.type.value ?? room.type }}</td>
                <td>₱{{ room.price|number_format(2, '.', ',') }}</td>
                <td>
                    <a href="{{ path('admin_room_edit', {'id': room.id}) }}" class="btn btn-edit">Edit</a>

                    {# ✅ Delete form (stays on same list page after deletion) #}
                    <form 
                        method="post"
                        action="{{ path('admin_room_delete', {'id': room.id}) }}"
                        style="display:inline;"
                        onsubmit="return confirm('Are you sure you want to delete this room?');"
                    >
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ room.id) }}">
                        <button class="btn btn-delete">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No rooms found.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div style="text-align:center; margin-top:20px;">
    <a href="{{ path('admin_room_new') }}" class="btn btn-edit">+ Add New Room</a>
</div>
<div style="text-align:center; margin-top:10px; font-size: 2rem;">
    <a href="{{ path('app_admin') }}" class="back-link">← Back to Dashboard</a>
</div>
{% endblock %}
